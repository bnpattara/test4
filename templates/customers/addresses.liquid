{% comment %}
  Address form template
  Accepts:
  - customer: {Customer} The customer object
  - address: {Address} The address object (for editing)
  - form_errors: {Object} Form errors
{% endcomment %}

<div class="account">
  <div class="account__container">
    <div class="account__content">
      <header class="account__header">
        <h1 class="account__title">
          {{ 'customer.addresses.title' | t }}
        </h1>

        <a
          href="{{ routes.account_url }}"
          class="account__back"
        >
          {{ 'customer.addresses.return_to_account' | t }}
        </a>
      </header>

      {% if form_errors %}
        <div class="account__errors">
          {% for error in form_errors %}
            <div class="account__error">
              {{ error }}
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <div class="account__form">
        {% form 'customer_address', address %}
          <div class="account__form-grid">
            <div class="account__form-group">
              <label for="address_first_name" class="account__form-label">
                {{ 'customer.addresses.first_name' | t }}
              </label>
              <input
                type="text"
                name="address[first_name]"
                id="address_first_name"
                class="account__form-input"
                value="{{ form.first_name }}"
                required
              >
            </div>

            <div class="account__form-group">
              <label for="address_last_name" class="account__form-label">
                {{ 'customer.addresses.last_name' | t }}
              </label>
              <input
                type="text"
                name="address[last_name]"
                id="address_last_name"
                class="account__form-input"
                value="{{ form.last_name }}"
                required
              >
            </div>

            <div class="account__form-group">
              <label for="address_company" class="account__form-label">
                {{ 'customer.addresses.company' | t }}
              </label>
              <input
                type="text"
                name="address[company]"
                id="address_company"
                class="account__form-input"
                value="{{ form.company }}"
              >
            </div>

            <div class="account__form-group">
              <label for="address_address1" class="account__form-label">
                {{ 'customer.addresses.address1' | t }}
              </label>
              <input
                type="text"
                name="address[address1]"
                id="address_address1"
                class="account__form-input"
                value="{{ form.address1 }}"
                required
              >
            </div>

            <div class="account__form-group">
              <label for="address_address2" class="account__form-label">
                {{ 'customer.addresses.address2' | t }}
              </label>
              <input
                type="text"
                name="address[address2]"
                id="address_address2"
                class="account__form-input"
                value="{{ form.address2 }}"
              >
            </div>

            <div class="account__form-group">
              <label for="address_city" class="account__form-label">
                {{ 'customer.addresses.city' | t }}
              </label>
              <input
                type="text"
                name="address[city]"
                id="address_city"
                class="account__form-input"
                value="{{ form.city }}"
                required
              >
            </div>

            <div class="account__form-group">
              <label for="address_country" class="account__form-label">
                {{ 'customer.addresses.country' | t }}
              </label>
              <select
                name="address[country]"
                id="address_country"
                class="account__form-select"
                data-default="{{ form.country }}"
                required
              >
                {{ country_option_tags }}
              </select>
            </div>

            <div class="account__form-group">
              <label for="address_province" class="account__form-label">
                {{ 'customer.addresses.province' | t }}
              </label>
              <select
                name="address[province]"
                id="address_province"
                class="account__form-select"
                data-default="{{ form.province }}"
              >
              </select>
            </div>

            <div class="account__form-group">
              <label for="address_zip" class="account__form-label">
                {{ 'customer.addresses.zip' | t }}
              </label>
              <input
                type="text"
                name="address[zip]"
                id="address_zip"
                class="account__form-input"
                value="{{ form.zip }}"
                required
              >
            </div>

            <div class="account__form-group">
              <label for="address_phone" class="account__form-label">
                {{ 'customer.addresses.phone' | t }}
              </label>
              <input
                type="tel"
                name="address[phone]"
                id="address_phone"
                class="account__form-input"
                value="{{ form.phone }}"
              >
            </div>
          </div>

          <div class="account__form-actions">
            <div class="account__form-checkbox">
              <input
                type="checkbox"
                name="address[default]"
                id="address_default"
                class="account__form-checkbox-input"
                value="1"
                {% if form.default %}
                  checked
                {% endif %}
              >
              <label for="address_default" class="account__form-checkbox-label">
                {{ 'customer.addresses.set_default' | t }}
              </label>
            </div>

            <div class="account__form-buttons">
              <button type="submit" class="account__form-submit">
                {{ 'customer.addresses.save' | t }}
              </button>

              <a
                href="{{ routes.account_addresses_url }}"
                class="account__form-cancel"
              >
                {{ 'customer.addresses.cancel' | t }}
              </a>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
  .account {
    padding: 2rem 0;
  }

  .account__container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .account__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .account__header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .account__title {
    margin: 0 0 1rem;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .account__back {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
  }

  .account__back:hover {
    color: var(--color-primary-hover);
  }

  .account__errors {
    margin-bottom: 1.5rem;
    padding: 1rem;
    border: 1px solid var(--color-error);
    border-radius: 0.375rem;
    background-color: var(--color-error-background);
    color: var(--color-error);
  }

  .account__error {
    margin-bottom: 0.5rem;
  }

  .account__error:last-child {
    margin-bottom: 0;
  }

  .account__form {
    padding: 2rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background-color: var(--color-background);
  }

  .account__form-grid {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .account__form-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .account__form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .account__form-label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .account__form-input,
  .account__form-select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background-color: var(--color-background);
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  .account__form-input:focus,
  .account__form-select:focus {
    border-color: var(--color-primary);
    outline: none;
  }

  .account__form-actions {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .account__form-checkbox {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .account__form-checkbox-input {
    width: 1rem;
    height: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    cursor: pointer;
  }

  .account__form-checkbox-label {
    font-size: 0.875rem;
    cursor: pointer;
  }

  .account__form-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .account__form-submit {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 0.375rem;
    background-color: var(--color-primary);
    color: var(--color-primary-foreground);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .account__form-submit:hover {
    background-color: var(--color-primary-hover);
  }

  .account__form-cancel {
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .account__form-cancel:hover {
    background-color: var(--color-background-alt);
  }

  @media (max-width: 767px) {
    .account__title {
      font-size: 1.75rem;
    }

    .account__form {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // Initialize province selector
  document.addEventListener('DOMContentLoaded', function() {
    const countrySelect = document.getElementById('address_country');
    const provinceSelect = document.getElementById('address_province');
    const provinceContainer = document.getElementById('address_province_container');

    if (countrySelect && provinceSelect) {
      // Update provinces when country changes
      countrySelect.addEventListener('change', function() {
        const country = this.value;
        const provinces = this.options[this.selectedIndex].dataset.provinces;
        const provinceArray = JSON.parse(provinces);

        // Clear existing options
        provinceSelect.innerHTML = '';
        
        // Add new options
        if (provinceArray.length > 0) {
          provinceArray.forEach(function(province) {
            const option = document.createElement('option');
            option.value = province[0];
            option.textContent = province[1];
            provinceSelect.appendChild(option);
          });
          provinceSelect.disabled = false;
        } else {
          const option = document.createElement('option');
          option.value = '';
          option.textContent = '---';
          provinceSelect.appendChild(option);
          provinceSelect.disabled = true;
        }
      });

      // Trigger change event to initialize provinces
      countrySelect.dispatchEvent(new Event('change'));
    }
  });
</script>

