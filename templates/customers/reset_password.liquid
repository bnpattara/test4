{% comment %}
  Reset password template
  Accepts:
  - form_errors: {Object} Form errors
  - reset_success: {Boolean} Whether reset was successful
{% endcomment %}

<div class="account">
  <div class="account__container">
    <div class="account__content">
      <header class="account__header">
        <h1 class="account__title">
          {{ 'customer.reset_password.title' | t }}
        </h1>
      </header>

      {% if form_errors %}
        <div class="account__errors">
          {% for error in form_errors %}
            <div class="account__error">
              {{ error }}
            </div>
          {% endfor %}
        </div>
      {% endif %}

      {% if reset_success %}
        <div class="account__success">
          {{ 'customer.reset_password.success' | t }}
        </div>

        <div class="account__actions">
          <a href="{{ routes.account_login_url }}" class="account__action">
            {{ 'customer.reset_password.return_to_login' | t }}
          </a>
        </div>
      {% else %}
        <div class="account__form">
          <p class="account__form-description">
            {{ 'customer.reset_password.subtext' | t }}
          </p>

          {% form 'reset_customer_password' %}
            <div class="account__form-group">
              <label for="password" class="account__form-label">
                {{ 'customer.reset_password.password' | t }}
              </label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                class="account__form-input"
                required
                minlength="8"
              >
            </div>

            <div class="account__form-group">
              <label for="password_confirmation" class="account__form-label">
                {{ 'customer.reset_password.password_confirm' | t }}
              </label>
              <input
                type="password"
                name="customer[password_confirmation]"
                id="password_confirmation"
                class="account__form-input"
                required
                minlength="8"
              >
            </div>

            <div class="account__form-actions">
              <button type="submit" class="account__form-submit">
                {{ 'customer.reset_password.submit' | t }}
              </button>
            </div>
          {% endform %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .account {
    padding: 2rem 0;
  }

  .account__container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .account__content {
    max-width: 600px;
    margin: 0 auto;
  }

  .account__header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .account__title {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .account__errors {
    margin-bottom: 1.5rem;
    padding: 1rem;
    border: 1px solid var(--color-error);
    border-radius: 0.375rem;
    background-color: var(--color-error-background);
    color: var(--color-error);
  }

  .account__error {
    margin-bottom: 0.5rem;
  }

  .account__error:last-child {
    margin-bottom: 0;
  }

  .account__success {
    margin-bottom: 1.5rem;
    padding: 1rem;
    border: 1px solid var(--color-success);
    border-radius: 0.375rem;
    background-color: var(--color-success-background);
    color: var(--color-success);
  }

  .account__form {
    padding: 2rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background-color: var(--color-background);
  }

  .account__form-description {
    margin: 0 0 1.5rem;
    color: var(--color-muted);
  }

  .account__form-group {
    margin-bottom: 1.5rem;
  }

  .account__form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .account__form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background-color: var(--color-background);
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  .account__form-input:focus {
    border-color: var(--color-primary);
    outline: none;
  }

  .account__form-actions {
    margin-top: 1.5rem;
  }

  .account__form-submit {
    width: 100%;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 0.375rem;
    background-color: var(--color-primary);
    color: var(--color-primary-foreground);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .account__form-submit:hover {
    background-color: var(--color-primary-hover);
  }

  .account__actions {
    margin-top: 1.5rem;
    text-align: center;
  }

  .account__action {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background-color: var(--color-background);
    color: var(--color-foreground);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .account__action:hover {
    background-color: var(--color-background-alt);
  }

  @media (max-width: 767px) {
    .account__title {
      font-size: 1.75rem;
    }

    .account__form {
      padding: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Reset Password",
  "settings": []
}
{% endschema %} 