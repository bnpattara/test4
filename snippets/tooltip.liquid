{% comment %}
  Tooltip component
  Accepts:
  - content: {String} Tooltip content
  - side: {String} Tooltip position (top, right, bottom, left)
  - class: {String} Additional classes
{% endcomment %}

<div class="tooltip-wrapper {{ class }}" data-tooltip-wrapper>
  {{ content_for_tooltip }}
  <div class="tooltip {{ side }}" data-tooltip>
    {{ content }}
  </div>
</div>

<style>
  .tooltip-wrapper {
    position: relative;
    display: inline-block;
  }

  .tooltip {
    position: absolute;
    z-index: 50;
    padding: 0.5rem;
    background-color: var(--color-popover);
    color: var(--color-popover-foreground);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    font-size: 0.875rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
  }

  .tooltip.show {
    opacity: 1;
  }

  .tooltip.top {
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 0.5rem;
  }

  .tooltip.right {
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    margin-left: 0.5rem;
  }

  .tooltip.bottom {
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 0.5rem;
  }

  .tooltip.left {
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
    margin-right: 0.5rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tooltipWrappers = document.querySelectorAll('[data-tooltip-wrapper]');
    
    tooltipWrappers.forEach(wrapper => {
      const tooltip = wrapper.querySelector('[data-tooltip]');
      
      wrapper.addEventListener('mouseenter', () => {
        tooltip.classList.add('show');
      });
      
      wrapper.addEventListener('mouseleave', () => {
        tooltip.classList.remove('show');
      });
    });
  });
</script> 